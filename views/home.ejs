<%- include("partials/header.ejs"); -%>

<div class="home">
    <div class="row">
        <div class="col">
            <h6 class="col">Your stories,</h6>
            <h6><%= currentDate %></h6>
        </div>
    </div>

    <div class="content">
        <% posts.forEach(function(post){ %>
            <h2><%= post.title %></h2>
            <p><%= post.description.substring(0,100) + "..." %><a href="/<%= post.title %>"> Read More </a></p>
        <% }); %>
    </div>
</div>



